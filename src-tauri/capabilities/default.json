{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "remote": {
    "urls": ["http://*"]
  },
  "permissions": [
    "core:default",
    "core:window:allow-start-dragging",
    "core:window:allow-set-theme",
    "shell:allow-spawn",
    "shell:allow-open",
    "core:app:allow-set-app-theme",
    "os:default",
    "log:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*:*"
        },
        {
          "url": "http://*:*"
        }
      ],
      "deny": []
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "args": [
            "--start-server",
            {
              "validator": "\\S+"
            },
            "--port",
            {
              "validator": "\\S+"
            },
            "--config_file_path",
            {
              "validator": "\\S+"
            },
            "--data_folder_path",
            {
              "validator": "\\S+"
            }
          ],
          "name": "binaries/cortex-server",
          "sidecar": true
        }
      ]
    },
    "store:default"
  ]
}
